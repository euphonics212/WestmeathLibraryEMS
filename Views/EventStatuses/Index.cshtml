@model IEnumerable<WestmeathLibraryEMS.Models.EventStatus>

@{
    ViewData["Title"] = "Index";
}

<h1 class="page-heading">Event Status</h1>

<div class="table-container col-4 ">
    <table id="eventStatusTable" class="table table-striped table-bordered display mt">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EventStatusName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventStatusName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","EventStatuses", new { id = item.Id })"><i class="fas fa-pencil-alt"></i></a>
                        @*<a href="@Url.Action("Details","EventStatuses", new { id = item.Id })"><i class="fas fa-question"></i></a>*@
                        <a href="@Url.Action("Delete","EventStatuses", new { id = item.Id })"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "btn btn-info nav-back" })
    @Html.ActionLink("<-- BACK", "SystemSetup", "Home", null, new { @class = "btn btn-info nav-back" })
</div>