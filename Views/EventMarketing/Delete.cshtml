@model WestmeathLibraryEMS.ViewModels.EventMarketingFormViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="section-heading-container col-8 offset-2">
    <h1 class="section-heading">Delete Event Marketing</h1>
    <h2 class="alert-danger">Are you sure you want to delete this event's marketing?</h2>
</div>

<div class="col-8 offset-2 details-container">

    <dl class="row">
        <div class="col-6">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventMarketing.Event.EventName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventMarketing.Event.EventName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventMarketing.MarketingType.MarketingTypeName)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventMarketing.MarketingType.MarketingTypeName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventMarketing.Url)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventMarketing.Url)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventMarketing.DateAdded)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventMarketing.DateAdded)
        </dd>
</div>
    </dl>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.EventMarketing.Id)

    <div class="form-actions delete-btn-container">
        <input type="submit" value="Delete" class="btn btn-default  btn-form" />

    </div>

}

</div>

<div class=" col-8 offset-2">
    @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "btn btn-info nav-back" })
    <button class="btn btn-info nav-back" onclick="goBack()">&lt--- BACK</button>
</div>