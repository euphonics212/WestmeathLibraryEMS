@model WestmeathLibraryEMS.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

<div class="section-heading-container col-8 offset-2">
    <h1 class="section-heading">Delete Venue</h1>
    <h2 class="alert-danger">Are you sure you want to delete this venue?</h2>
</div>

<div class="col-8 offset-2 details-container">
    <div class="row">
        <div class="col-6">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.VenueName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VenueName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Coordinates)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Coordinates)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Eircode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Eircode)
                </dd>
            </dl>

            @*<form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
