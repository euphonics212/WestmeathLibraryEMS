@model WestmeathLibraryEMS.Models.MarketingType

@{
    ViewData["Title"] = "Edit";
}
<div class="section-heading-container col-6 offset-3">

    <h1 class="section-heading">Edit Marketing Type</h1>

</div>

<div class="col-6 offset-3  small-form-container">
    @using (Html.BeginForm("Create", "MarketingTypes"))
    {
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="MarketingTypeName" class="control-label"></label>
                        <input asp-for="MarketingTypeName" class="form-control" />
                        <span asp-validation-for="MarketingTypeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-form" />
                    </div>
                </form>
            </div>
        </div>

    }

    @Html.ActionLink("<-- BACK", "Index", "MarketingTypes", null, new { @class = "btn btn-info  nav-back " })
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
