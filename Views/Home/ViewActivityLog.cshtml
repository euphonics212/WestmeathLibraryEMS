@model IEnumerable<WestmeathLibraryEMS.Models.UserActivity>
@{
    ViewData["Title"] = "ViewActivityLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section-heading-container col-11 offset-1">
    <h1 class="section-heading">View Activity Log</h1>
</div>

<div class="table-container col-11 offset-1 dataTableParentHidden">
    <table id="userActivityTable" class="table table-striped table-bordered display mt">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Activity</th>
                <th>Date and Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>

                    <td class="tableDate">
                        <span>


                            @item.Date.Ticks

                        </span>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "btn btn-info nav-back" })
    <button class="btn btn-info nav-back" onclick="goBack()">&lt--- BACK</button>
</div>