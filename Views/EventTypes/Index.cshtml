@model IEnumerable<WestmeathLibraryEMS.Models.EventType>

@{
    ViewData["Title"] = "Index";
}

<div class="section-heading-container col-8 offset-2 ">
    <h1 class="section-heading">Event Types</h1>
</div>


<div class="col-8 offset-2 small-form-container">

    <table id="eventTypeTable" class=" table table-striped table-bordered display mt-4 ">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(t => t.TypeName)
                </th>
                <th>Options</th>
                <th>Delete?</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" style="font-size:1.2em; float: left"><b>DETAILS</b></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" style="font-size:1.2em; float: right;"><b>EDIT</b></a>

                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" style="font-size:1.2em; color:orangered;  float:right"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    @Html.ActionLink("ADD NEW", "New", "EventTypes", null, new { @class = "btn btn-info nav-back" })
    @Html.ActionLink("HOME", "Index", "Home", null, new { @class = "btn btn-info nav-back" })
    <button class="btn btn-info nav-back" onclick="goBack()">&lt--- BACK</button>
</div>